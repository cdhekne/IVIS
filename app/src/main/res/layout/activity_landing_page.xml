<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/abc_action_button_min_width_material"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context=".LandingPage"
    android:background="@drawable/background">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nav_button"
        android:background="@drawable/navigation_xhdpi"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/media_button"
        android:layout_marginLeft="44dp"
        android:background="@drawable/media_xhdpi"
        android:layout_above="@+id/carControls_button"
        android:layout_toRightOf="@+id/nav_button"
        android:layout_toEndOf="@+id/nav_button"
        android:layout_marginStart="44dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/call_button"
        android:background="@drawable/phone_xhdpi"
        android:layout_above="@+id/carControls_button"
        android:layout_alignLeft="@+id/apps_button"
        android:layout_alignStart="@+id/apps_button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carControls_button"
        android:background="@drawable/controls_xhdpi"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/nav_button"
        android:layout_alignLeft="@+id/nav_button"
        android:layout_alignStart="@+id/nav_button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/climate_button"
        android:background="@drawable/climate_xhdpi"
        android:layout_alignTop="@+id/carControls_button"
        android:layout_alignLeft="@+id/media_button"
        android:layout_alignStart="@+id/media_button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/apps_button"
        android:background="@drawable/apps_xhdpi"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_alignTop="@+id/climate_button"
        android:layout_toRightOf="@+id/climate_button"
        android:layout_toEndOf="@+id/climate_button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mic_button"
        android:background="@drawable/mic_xhdpi"
        android:layout_above="@+id/apps_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
