<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.asu.msse.cdhekne.ivis.NavigationActivity"
    android:background="@drawable/background"
    >


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_settings"
        android:background="@drawable/settings_xhdpi"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_mic"


        android:background="@drawable/mic_xhdpi"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button_settings"
        android:layout_alignStart="@+id/button_settings" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_back"
        android:background="@drawable/back_xhdpi"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_help"
        android:background="@drawable/help_xhdpi"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map"
        android:src="@drawable/mapimage"
        android:layout_above="@+id/button_settings"
        android:layout_toRightOf="@+id/button_help"
        android:layout_toLeftOf="@+id/button_settings"
        android:layout_toStartOf="@+id/button_settings" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button_settings"
        android:layout_alignLeft="@+id/map"
        android:layout_alignStart="@+id/map"
        android:layout_below="@+id/map">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50pt"
            android:text="Address"
            android:id="@+id/button9"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageView"
            android:layout_weight="1"
            android:background="#808080"
            android:textColor="@android:color/white"
            android:onClick="click"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50pt"
            android:text="Places"
            android:id="@+id/button10"
            android:layout_alignTop="@+id/button9"
            android:layout_toRightOf="@+id/button9"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_weight="1"
            android:background="#808080"
            android:textColor="@android:color/white"
            android:onClick="click"/>

        <Button

            android:layout_width="wrap_content"
            android:layout_height="50pt"
            android:text="Favorites"
            android:id="@+id/button11"
            android:layout_alignTop="@+id/button10"
            android:layout_toRightOf="@+id/button10"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_weight="1"
            android:background="#808080"
            android:textColor="@android:color/white"
            android:onClick="click"/>

        <Button

            android:layout_width="wrap_content"
            android:layout_height="50pt"
            android:text="Recent"
            android:id="@+id/button12"
            android:layout_alignTop="@+id/button11"
            android:layout_toRightOf="@+id/button11"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_weight="1"
            android:background="#808080"
            android:textColor="@android:color/white"
            android:onClick="click"/>
    </LinearLayout>



</RelativeLayout>