<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.asu.msse.cdhekne.ivis.MediaActivity"
    android:background="@drawable/background"
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_mic"
        android:background="@drawable/mic_xhdpi"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_settings"
        android:layout_below="@+id/button_nine"
        android:layout_alignRight="@+id/button_mic"
        android:layout_alignEnd="@+id/button_mic"
        android:background="@drawable/settings_xhdpi"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_back"
        android:background="@drawable/back_xhdpi"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_help"
        android:background="@drawable/help_xhdpi"
        android:layout_alignTop="@+id/button_settings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play"
        android:background="@drawable/play_xhdpi"
        android:layout_marginTop="118dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/button_settings"
        android:layout_toRightOf="@+id/stop"
        android:layout_toEndOf="@+id/stop" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backw"
        android:background="@drawable/back2_xhdpi"
        android:layout_alignTop="@+id/stop"
        android:layout_toRightOf="@+id/stop"
        android:layout_marginRight="90dp"
         />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forw"
        android:background="@drawable/forward2_xhdpi"
        android:layout_above="@+id/seek"
        android:layout_toEndOf="@+id/seek"
        android:layout_toRightOf="@+id/seek" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seek"
        android:background="@drawable/seeker_line_xhdpi"
        android:layout_marginTop="108dp"

        android:layout_toEndOf="@+id/backw"
        android:layout_toRightOf="@+id/backw"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stop"
        android:background="@drawable/stop_xhdpi"
        android:layout_alignTop="@+id/play"
        android:layout_toRightOf="@+id/backw"
        android:layout_toEndOf="@+id/backw"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/seek"
        android:layout_toLeftOf="@+id/seek"
        android:id="@+id/seekcircle"
        android:background="@drawable/seeker_circle_xhdpi"/>




</RelativeLayout>